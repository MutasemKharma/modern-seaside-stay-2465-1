// Prisma schema for Development (SQLite)
// Use with: npx prisma generate --schema prisma/schema.dev.prisma
//           npx prisma db push --schema prisma/schema.dev.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Apartment {
  id                 Int       @id @default(autoincrement())
  name               String
  description        String
  pricePerNightCents Int
  capacity           Int
  sizeSqm            Int
  location           String
  features           Json
  images             Json
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  bookings           Booking[]
}

model Booking {
  id           Int       @id @default(autoincrement())
  apartmentId  Int
  apartment    Apartment @relation(fields: [apartmentId], references: [id])
  guestName    String
  email        String
  phone        String?
  checkIn      DateTime
  checkOut     DateTime
  guests       Int
  status       BookingStatus @default(PENDING)
  createdAt    DateTime  @default(now())
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  author    String
  rating    Int
  content   String
  createdAt DateTime @default(now())
}