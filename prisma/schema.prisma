// Prisma schema for Production (PostgreSQL - Supabase)
// Use with: npx prisma generate --schema prisma/schema.prisma
//          npx prisma migrate deploy --schema prisma/schema.prisma
// or      npx prisma db push --schema prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Apartment {
  id           Int       @id @default(autoincrement())
  name         String
  description  String
  pricePerNightCents Int
  capacity     Int
  sizeSqm      Int
  location     String
  features     Json      // e.g., ["sea view", "balcony"]
  images       Json      // e.g., ["/img1.jpg", "/img2.jpg"]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  bookings     Booking[]
}

model Booking {
  id           Int       @id @default(autoincrement())
  apartmentId  Int
  apartment    Apartment @relation(fields: [apartmentId], references: [id])
  guestName    String
  email        String
  phone        String?
  checkIn      DateTime
  checkOut     DateTime
  guests       Int
  status       BookingStatus @default(PENDING)
  createdAt    DateTime  @default(now())
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  author    String
  rating    Int      // 1-5
  content   String
  createdAt DateTime @default(now())
}